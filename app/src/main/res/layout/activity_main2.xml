<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <Button
        android:id="@+id/btnOpenDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Single Dialog"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/btnOpenMultipleDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Multiple Dialog"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnOpenDialog"
        />
    <TextView
        android:id="@+id/selectedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selected Item: "
        android:layout_below="@id/btnOpenMultipleDialog"
        android:layout_marginTop="20dp"

        />

</RelativeLayout>