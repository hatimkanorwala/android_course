<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:layout_margin="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/list_rollno"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="01"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/list_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Username: Hatim Juzer Kanorwala"
                        />
                    <TextView
                        android:id="@+id/list_usermobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mobile: +91 8097922009"
                        />
                    <TextView
                        android:id="@+id/list_useremail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email: hatimjuzerkanorwala@gmail.com"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</ScrollView>